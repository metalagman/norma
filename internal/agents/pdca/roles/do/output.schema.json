{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "DoResponse",
  "properties": {
    "status": { "type": "string", "enum": ["ok", "stop", "error"] },
    "stop_reason": { "type": "string" },
    "summary": {
      "type": "object",
      "title": "DoSummary",
      "properties": {
        "text": { "type": "string" }
      },
      "required": ["text"]
    },
    "progress": {
      "type": "object",
      "title": "DoProgress",
      "properties": {
        "title": { "type": "string" },
        "details": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["title", "details"]
    },
    "do_output": {
      "type": "object",
      "title": "DoOutput",
      "properties": {
        "execution": {
          "type": "object",
          "title": "DoExecution",
          "properties": {
            "executed_step_ids": { "type": "array", "items": { "type": "string" } },
            "skipped_step_ids": { "type": "array", "items": { "type": "string" } }
          },
          "required": ["executed_step_ids", "skipped_step_ids"]
        }
      },
      "required": ["execution"]
    }
  },
  "required": ["status", "summary", "progress", "do_output"]
}
