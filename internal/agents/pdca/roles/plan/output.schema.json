{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "PlanResponse",
  "properties": {
    "status": { "type": "string", "enum": ["ok", "stop", "error"] },
    "stop_reason": { "type": "string" },
    "summary": {
      "type": "object",
      "title": "PlanSummary",
      "properties": {
        "text": { "type": "string" }
      },
      "required": ["text"]
    },
    "progress": {
      "type": "object",
      "title": "PlanProgress",
      "properties": {
        "title": { "type": "string" },
        "details": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["title", "details"]
    },
    "plan_output": {
      "type": "object",
      "title": "PlanOutput",
      "properties": {
        "acceptance_criteria": {
          "type": "object",
          "title": "PlanOutputAcceptanceCriteria",
          "properties": {
            "effective": {
              "type": "array",
              "items": {
                "type": "object",
                "title": "EffectiveAcceptanceCriteria",
                "properties": {
                  "id": { "type": "string" },
                  "origin": { "type": "string" },
                  "refines": { "type": "array", "items": { "type": "string" } },
                  "text": { "type": "string" },
                  "checks": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "title": "CriterionCheck",
                      "properties": {
                        "id": { "type": "string" },
                        "cmd": { "type": "string" },
                        "expect_exit_codes": { "type": "array", "items": { "type": "integer" } }
                      },
                      "required": ["id", "cmd", "expect_exit_codes"]
                    }
                  },
                  "reason": { "type": "string" }
                },
                "required": ["id", "origin", "text", "checks"]
              }
            }
          },
          "required": ["effective"]
        },
        "work_plan": {
          "type": "object",
          "title": "PlanWorkPlan",
          "properties": {
            "timebox_minutes": { "type": "integer" },
            "do_steps": {
              "type": "array",
              "items": {
                "type": "object",
                "title": "PlanDoStep",
                "properties": {
                  "id": { "type": "string" },
                  "text": { "type": "string" },
                  "targets_acceptance_criteria_ids": { "type": "array", "items": { "type": "string" } }
                },
                "required": ["id", "text"]
              }
            },
            "check_steps": {
              "type": "array",
              "items": {
                "type": "object",
                "title": "PlanCheckStep",
                "properties": {
                  "id": { "type": "string" },
                  "text": { "type": "string" },
                  "mode": { "type": "string" }
                },
                "required": ["id", "text", "mode"]
              }
            },
            "stop_triggers": { "type": "array", "items": { "type": "string" } }
          },
          "required": ["timebox_minutes", "do_steps", "check_steps"]
        }
      },
      "required": ["acceptance_criteria", "work_plan"]
    }
  },
  "required": ["status", "summary", "progress", "plan_output"]
}
