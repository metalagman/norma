{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "CheckRequest",
  "properties": {
    "run": {
      "type": "object",
      "title": "CheckRun",
      "properties": {
        "id": { "type": "string" },
        "iteration": { "type": "integer" }
      },
      "required": ["id", "iteration"]
    },
    "task": {
      "type": "object",
      "title": "CheckTask",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "acceptance_criteria": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "CheckAcceptanceCriteria",
            "properties": {
              "id": { "type": "string" },
              "text": { "type": "string" }
            },
            "required": ["id", "text"]
          }
        }
      },
      "required": ["id", "title", "description", "acceptance_criteria"]
    },
    "step": {
      "type": "object",
      "title": "CheckStep",
      "properties": {
        "index": { "type": "integer" },
        "name": { "type": "string" }
      },
      "required": ["index", "name"]
    },
    "paths": {
      "type": "object",
      "title": "CheckPaths",
      "properties": {
        "workspace_dir": { "type": "string" },
        "run_dir": { "type": "string" },
        "progress": { "type": "string" }
      },
      "required": ["workspace_dir", "run_dir", "progress"]
    },
    "budgets": {
      "type": "object",
      "title": "CheckBudgets",
      "properties": {
        "max_iterations": { "type": "integer" },
        "max_wall_time_minutes": { "type": "integer" },
        "max_failed_checks": { "type": "integer" }
      },
      "required": ["max_iterations"]
    },
    "context": {
      "type": "object",
      "title": "CheckContext",
      "properties": {
        "facts": { "type": "object" },
        "links": { "type": "array", "items": { "type": "string" } },
        "attempt": { "type": "integer" }
      }
    },
    "stop_reasons_allowed": { "type": "array", "items": { "type": "string" } },
    "check_input": {
      "type": "object",
      "title": "CheckInput",
      "properties": {
        "work_plan": {
          "type": "object",
          "title": "CheckWorkPlan",
          "properties": {
            "timebox_minutes": { "type": "integer" },
            "do_steps": {
              "type": "array",
              "items": {
                "type": "object",
                "title": "CheckDoStep",
                "properties": {
                  "id": { "type": "string" },
                  "text": { "type": "string" }
                },
                "required": ["id", "text"]
              }
            },
            "check_steps": {
              "type": "array",
              "items": {
                "type": "object",
                "title": "CheckCheckStep",
                "properties": {
                  "id": { "type": "string" },
                  "text": { "type": "string" },
                  "mode": { "type": "string" }
                },
                "required": ["id", "text", "mode"]
              }
            },
            "stop_triggers": { "type": "array", "items": { "type": "string" } }
          },
          "required": ["timebox_minutes", "do_steps", "check_steps", "stop_triggers"]
        },
        "acceptance_criteria_effective": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "CheckEffectiveAcceptanceCriteria",
            "properties": {
              "id": { "type": "string" },
              "origin": { "type": "string" },
              "text": { "type": "string" }
            },
            "required": ["id", "origin", "text"]
          }
        },
        "do_execution": {
          "type": "object",
          "title": "CheckDoExecution",
          "properties": {
            "executed_step_ids": { "type": "array", "items": { "type": "string" } },
            "skipped_step_ids": { "type": "array", "items": { "type": "string" } }
          },
          "required": ["executed_step_ids", "skipped_step_ids"]
        }
      },
      "required": ["work_plan", "acceptance_criteria_effective", "do_execution"]
    }
  },
  "required": ["run", "task", "step", "paths", "check_input"]
}
