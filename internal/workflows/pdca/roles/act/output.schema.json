{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "ActResponse",
  "properties": {
    "status": { "type": "string", "enum": ["ok", "stop", "error"] },
    "stop_reason": { "type": "string" },
    "summary": {
      "type": "object",
      "properties": {
        "text": { "type": "string" }
      },
      "required": ["text"]
    },
    "progress": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "details": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["title", "details"]
    },
    "act_output": {
      "type": "object",
      "properties": {
        "decision": { "type": "string", "enum": ["close", "replan", "rollback", "continue"] }
      },
      "required": ["decision"]
    }
  },
  "required": ["status", "summary", "progress", "act_output"]
}
