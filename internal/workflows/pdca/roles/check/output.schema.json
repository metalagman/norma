{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "CheckResponse",
  "properties": {
    "status": { "type": "string", "enum": ["ok", "stop", "error"] },
    "stop_reason": { "type": "string" },
    "summary": {
      "type": "object",
      "title": "CheckSummary",
      "properties": {
        "text": { "type": "string" }
      },
      "required": ["text"]
    },
    "progress": {
      "type": "object",
      "title": "CheckProgress",
      "properties": {
        "title": { "type": "string" },
        "details": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["title", "details"]
    },
    "check_output": {
      "type": "object",
      "title": "CheckOutput",
      "properties": {
        "acceptance_results": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "CheckAcceptanceResult",
            "properties": {
              "ac_id": { "type": "string" },
              "result": { "type": "string", "enum": ["PASS", "FAIL"] },
              "notes": { "type": "string" }
            },
            "required": ["ac_id", "result"]
          }
        },
        "verdict": {
          "type": "object",
          "title": "CheckVerdict",
          "properties": {
            "status": { "type": "string", "enum": ["PASS", "FAIL", "PARTIAL"] },
            "recommendation": { "type": "string" },
            "basis": {
              "type": "object",
              "title": "CheckVerdictBasis",
              "properties": {
                "plan_match": { "type": "string" },
                "all_acceptance_passed": { "type": "boolean" }
              }
            }
          },
          "required": ["status", "recommendation", "basis"]
        }
      },
      "required": ["acceptance_results", "verdict"]
    }
  },
  "required": ["status", "summary", "progress", "check_output"]
}
