{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "DoRequest",
  "properties": {
    "run": {
      "type": "object",
      "title": "DoRun",
      "properties": {
        "id": { "type": "string" },
        "iteration": { "type": "integer" }
      },
      "required": ["id", "iteration"]
    },
    "task": {
      "type": "object",
      "title": "DoTask",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "acceptance_criteria": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "DoAcceptanceCriterion",
            "properties": {
              "id": { "type": "string" },
              "text": { "type": "string" },
              "verify_hints": { "type": "array", "items": { "type": "string" } }
            },
            "required": ["id", "text"]
          }
        }
      },
      "required": ["id", "title", "description", "acceptance_criteria"]
    },
    "step": {
      "type": "object",
      "title": "DoStep",
      "properties": {
        "index": { "type": "integer" },
        "name": { "type": "string" },
        "dir": { "type": "string" }
      },
      "required": ["index", "name", "dir"]
    },
    "paths": {
      "type": "object",
      "title": "DoPaths",
      "properties": {
        "workspace_dir": { "type": "string" },
        "workspace_mode": { "type": "string" },
        "run_dir": { "type": "string" },
        "code_root": { "type": "string" }
      },
      "required": ["workspace_dir", "run_dir"]
    },
    "budgets": {
      "type": "object",
      "title": "DoBudgets",
      "properties": {
        "max_iterations": { "type": "integer" },
        "max_wall_time_minutes": { "type": "integer" },
        "max_failed_checks": { "type": "integer" }
      },
      "required": ["max_iterations"]
    },
    "context": {
      "type": "object",
      "title": "DoContext",
      "properties": {
        "facts": { "type": "object" },
        "links": { "type": "array", "items": { "type": "string" } },
        "attempt": { "type": "integer" }
      }
    },
    "stop_reasons_allowed": { "type": "array", "items": { "type": "string" } },
    "do_input": {
      "type": "object",
      "title": "DoInput",
      "properties": {
        "work_plan": {
          "type": "object",
          "title": "DoWorkPlan",
          "properties": {
            "timebox_minutes": { "type": "integer" },
            "do_steps": {
              "type": "array",
              "items": {
                "type": "object",
                "title": "DoDoStep",
                "properties": {
                  "id": { "type": "string" },
                  "text": { "type": "string" },
                  "commands": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "title": "DoCommand",
                      "properties": {
                        "id": { "type": "string" },
                        "cmd": { "type": "string" },
                        "expect_exit_codes": { "type": "array", "items": { "type": "integer" } }
                      },
                      "required": ["id", "cmd", "expect_exit_codes"]
                    }
                  },
                  "targets_ac_ids": { "type": "array", "items": { "type": "string" } }
                },
                "required": ["id", "text", "commands", "targets_ac_ids"]
              }
            },
            "check_steps": {
              "type": "array",
              "items": {
                "type": "object",
                "title": "DoCheckStep",
                "properties": {
                  "id": { "type": "string" },
                  "text": { "type": "string" },
                  "mode": { "type": "string" }
                },
                "required": ["id", "text", "mode"]
              }
            },
            "stop_triggers": { "type": "array", "items": { "type": "string" } }
          },
          "required": ["timebox_minutes", "do_steps", "check_steps", "stop_triggers"]
        },
        "acceptance_criteria_effective": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "DoEffectiveAC",
            "properties": {
              "id": { "type": "string" },
              "origin": { "type": "string" },
              "refines": { "type": "array", "items": { "type": "string" } },
              "text": { "type": "string" },
              "checks": {
                "type": "array",
                "items": {
                  "type": "object",
                  "title": "DoACCheck",
                  "properties": {
                    "id": { "type": "string" },
                    "cmd": { "type": "string" },
                    "expect_exit_codes": { "type": "array", "items": { "type": "integer" } }
                  },
                  "required": ["id", "cmd", "expect_exit_codes"]
                }
              },
              "reason": { "type": "string" }
            },
            "required": ["id", "origin", "text", "checks"]
          }
        }
      },
      "required": ["work_plan", "acceptance_criteria_effective"]
    }
  },
  "required": ["run", "task", "step", "paths", "do_input"]
}
