{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "DoRequest",
  "properties": {
    "run": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "iteration": { "type": "integer" }
      },
      "required": ["id", "iteration"]
    },
    "task": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "acceptance_criteria": { "type": "array" }
      },
      "required": ["id", "title", "description", "acceptance_criteria"]
    },
    "step": {
      "type": "object",
      "properties": {
        "index": { "type": "integer" },
        "name": { "type": "string" },
        "dir": { "type": "string" }
      },
      "required": ["index", "name", "dir"]
    },
    "paths": {
      "type": "object",
      "properties": {
        "workspace_dir": { "type": "string" },
        "workspace_mode": { "type": "string" },
        "run_dir": { "type": "string" },
        "code_root": { "type": "string" }
      },
      "required": ["workspace_dir", "workspace_mode", "run_dir", "code_root"]
    },
    "budgets": { "type": "object" },
    "context": { "type": "object" },
    "stop_reasons_allowed": { "type": "array", "items": { "type": "string" } },
    "do_input": {
      "type": "object",
      "properties": {
        "work_plan": {
          "type": "object",
          "properties": {
            "timebox_minutes": { "type": "integer" },
            "do_steps": { "type": "array" },
            "check_steps": { "type": "array" },
            "stop_triggers": { "type": "array" }
          },
          "required": ["timebox_minutes", "do_steps", "check_steps", "stop_triggers"]
        },
        "acceptance_criteria_effective": { "type": "array" }
      },
      "required": ["work_plan", "acceptance_criteria_effective"]
    }
  },
  "required": ["run", "task", "step", "paths", "do_input"]
}