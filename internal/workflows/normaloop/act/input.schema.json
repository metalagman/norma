{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "ActRequest",
  "properties": {
    "run": {
      "type": "object",
      "title": "ActRun",
      "properties": {
        "id": { "type": "string" },
        "iteration": { "type": "integer" }
      },
      "required": ["id", "iteration"]
    },
    "task": {
      "type": "object",
      "title": "ActTask",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "acceptance_criteria": { "type": "array" }
      },
      "required": ["id", "title", "description", "acceptance_criteria"]
    },
    "step": {
      "type": "object",
      "title": "ActStep",
      "properties": {
        "index": { "type": "integer" },
        "name": { "type": "string" },
        "dir": { "type": "string" }
      },
      "required": ["index", "name", "dir"]
    },
    "paths": {
      "type": "object",
      "title": "ActPaths",
      "properties": {
        "workspace_dir": { "type": "string" },
        "run_dir": { "type": "string" }
      },
      "required": ["workspace_dir", "run_dir"]
    },
    "budgets": {
      "type": "object",
      "title": "ActBudgets",
      "properties": {
        "max_iterations": { "type": "integer" },
        "max_wall_time_minutes": { "type": "integer" },
        "max_failed_checks": { "type": "integer" }
      },
      "required": ["max_iterations"]
    },
    "context": {
      "type": "object",
      "title": "ActContext",
      "properties": {
        "facts": { "type": "object", "title": "ActFacts" },
        "links": { "type": "array", "items": { "type": "string" } },
        "attempt": { "type": "integer" }
      }
    },
    "stop_reasons_allowed": { "type": "array", "items": { "type": "string" } },
    "act_input": {
      "type": "object",
      "title": "ActInput",
      "properties": {
        "check_verdict": {
          "type": "object",
          "title": "ActCheckVerdict",
          "properties": {
            "status": { "type": "string", "enum": ["PASS", "FAIL", "PARTIAL"] },
            "recommendation": { "type": "string" },
            "basis": {
              "type": "object",
              "title": "ActCheckVerdictBasis",
              "properties": {
                "plan_match": { "type": "string" },
                "all_acceptance_passed": { "type": "boolean" }
              }
            }
          },
          "required": ["status", "recommendation", "basis"]
        },
        "acceptance_results": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "ActAcceptanceResult",
            "properties": {
              "ac_id": { "type": "string" },
              "result": { "type": "string", "enum": ["PASS", "FAIL"] },
              "notes": { "type": "string" },
              "log_ref": { "type": "string" }
            },
            "required": ["ac_id", "result"]
          }
        }
      },
      "required": ["check_verdict"]
    }
  },
  "required": ["run", "task", "step", "paths", "act_input"]
}
