{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "CheckResponse",
  "properties": {
    "status": { "type": "string", "enum": ["ok", "stop", "error"] },
    "stop_reason": { "type": "string" },
    "summary": {
      "type": "object",
      "title": "CheckSummary",
      "properties": {
        "text": { "type": "string" },
        "warnings": { "type": "array", "items": { "type": "string" } },
        "errors": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["text"]
    },
    "progress": {
      "type": "object",
      "title": "CheckProgress",
      "properties": {
        "title": { "type": "string" },
        "details": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["title", "details"]
    },
    "logs": {
      "type": "object",
      "title": "CheckLogs",
      "properties": {
        "stdout_path": { "type": "string" },
        "stderr_path": { "type": "string" }
      }
    },
    "timing": {
      "type": "object",
      "title": "CheckTiming",
      "properties": {
        "wall_time_ms": { "type": "integer" }
      }
    },
    "check_output": {
      "type": "object",
      "title": "CheckOutput",
      "properties": {
        "plan_match": {
          "type": "object",
          "title": "CheckPlanMatch",
          "properties": {
            "do_steps": {
              "type": "object",
              "title": "CheckMatchResult",
              "properties": {
                "planned_ids": { "type": "array", "items": { "type": "string" } },
                "executed_ids": { "type": "array", "items": { "type": "string" } },
                "missing_ids": { "type": "array", "items": { "type": "string" } },
                "unexpected_ids": { "type": "array", "items": { "type": "string" } }
              }
            },
            "commands": {
              "type": "object",
              "title": "CheckMatchResult",
              "properties": {
                "planned_ids": { "type": "array", "items": { "type": "string" } },
                "executed_ids": { "type": "array", "items": { "type": "string" } },
                "missing_ids": { "type": "array", "items": { "type": "string" } },
                "unexpected_ids": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        },
        "acceptance_results": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "CheckAcceptanceResult",
            "properties": {
              "ac_id": { "type": "string" },
              "result": { "type": "string", "enum": ["PASS", "FAIL"] },
              "notes": { "type": "string" },
              "log_ref": { "type": "string" }
            },
            "required": ["ac_id", "result"]
          }
        },
        "verdict": {
          "type": "object",
          "title": "CheckVerdict",
          "properties": {
            "status": { "type": "string", "enum": ["PASS", "FAIL", "PARTIAL"] },
            "recommendation": { "type": "string" },
            "basis": {
              "type": "object",
              "title": "CheckVerdictBasis",
              "properties": {
                "plan_match": { "type": "string" },
                "all_acceptance_passed": { "type": "boolean" }
              }
            }
          },
          "required": ["status", "recommendation", "basis"]
        },
        "process_notes": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "CheckProcessNote",
            "properties": {
              "kind": { "type": "string" },
              "severity": { "type": "string" },
              "text": { "type": "string" },
              "suggested_stop_reason": { "type": "string" }
            },
            "required": ["kind", "severity", "text"]
          }
        }
      },
      "required": ["plan_match", "acceptance_results", "verdict"]
    }
  },
  "required": ["status", "summary", "progress", "check_output"]
}
