{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "CheckResponse",
  "properties": {
    "status": { "type": "string", "enum": ["ok", "stop", "error"] },
    "stop_reason": { "type": "string" },
    "summary": {
      "type": "object",
      "properties": {
        "text": { "type": "string" },
        "warnings": { "type": "array", "items": { "type": "string" } },
        "errors": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["text"]
    },
    "progress": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "details": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["title", "details"]
    },
    "logs": {
      "type": "object",
      "properties": {
        "stdout_path": { "type": "string" },
        "stderr_path": { "type": "string" }
      }
    },
    "timing": {
      "type": "object",
      "properties": {
        "wall_time_ms": { "type": "integer" }
      }
    },
    "check_output": {
      "type": "object",
      "properties": {
        "plan_match": { "type": "object" },
        "acceptance_results": { "type": "array" },
        "verdict": {
          "type": "object",
          "properties": {
            "status": { "type": "string", "enum": ["PASS", "FAIL", "PARTIAL"] },
            "recommendation": { "type": "string" },
            "basis": { "type": "object" }
          },
          "required": ["status", "recommendation", "basis"]
        }
      },
      "required": ["plan_match", "acceptance_results", "verdict"]
    }
  },
  "required": ["status", "summary", "progress", "check_output"]
}
