{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "PlanResponse",
  "properties": {
    "status": { "type": "string", "enum": ["ok", "stop", "error"] },
    "stop_reason": { "type": "string" },
    "summary": {
      "type": "object",
      "title": "PlanSummary",
      "properties": {
        "text": { "type": "string" },
        "warnings": { "type": "array", "items": { "type": "string" } },
        "errors": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["text"]
    },
    "progress": {
      "type": "object",
      "title": "PlanProgress",
      "properties": {
        "title": { "type": "string" },
        "details": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["title", "details"]
    },
    "logs": {
      "type": "object",
      "title": "PlanLogs",
      "properties": {
        "stdout_path": { "type": "string" },
        "stderr_path": { "type": "string" }
      }
    },
    "timing": {
      "type": "object",
      "title": "PlanTiming",
      "properties": {
        "wall_time_ms": { "type": "integer" }
      }
    },
    "plan_output": {
      "type": "object",
      "title": "PlanOutput",
      "properties": {
        "task_id": { "type": "string" },
        "goal": { "type": "string" },
        "constraints": { "type": "array", "items": { "type": "string" } },
        "acceptance_criteria": {
          "type": "object",
          "title": "PlanAcceptanceCriteria",
          "properties": {
            "baseline": {
              "type": "array",
              "items": {
                "type": "object",
                "title": "BaselineAC",
                "properties": {
                  "id": { "type": "string" },
                  "text": { "type": "string" },
                  "verify_hints": { "type": "array", "items": { "type": "string" } }
                },
                "required": ["id", "text"]
              }
            },
            "effective": {
              "type": "array",
              "items": {
                "type": "object",
                "title": "EffectiveAC",
                "properties": {
                  "id": { "type": "string" },
                  "origin": { "type": "string" },
                  "refines": { "type": "array", "items": { "type": "string" } },
                  "text": { "type": "string" },
                  "checks": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "title": "ACCheck",
                      "properties": {
                        "id": { "type": "string" },
                        "cmd": { "type": "string" },
                        "expect_exit_codes": { "type": "array", "items": { "type": "integer" } }
                      },
                      "required": ["id", "cmd", "expect_exit_codes"]
                    }
                  },
                  "reason": { "type": "string" }
                },
                "required": ["id", "origin", "text", "checks"]
              }
            }
          },
          "required": ["baseline", "effective"]
        },
        "work_plan": {
          "type": "object",
          "title": "PlanWorkPlan",
          "properties": {
            "timebox_minutes": { "type": "integer" },
            "do_steps": {
              "type": "array",
              "items": {
                "type": "object",
                "title": "PlanDoStep",
                "properties": {
                  "id": { "type": "string" },
                  "text": { "type": "string" },
                  "commands": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "title": "PlanCommand",
                      "properties": {
                        "id": { "type": "string" },
                        "cmd": { "type": "string" },
                        "expect_exit_codes": { "type": "array", "items": { "type": "integer" } }
                      },
                      "required": ["id", "cmd", "expect_exit_codes"]
                    }
                  },
                  "targets_ac_ids": { "type": "array", "items": { "type": "string" } }
                },
                "required": ["id", "text", "commands", "targets_ac_ids"]
              }
            },
            "check_steps": {
              "type": "array",
              "items": {
                "type": "object",
                "title": "PlanCheckStep",
                "properties": {
                  "id": { "type": "string" },
                  "text": { "type": "string" },
                  "mode": { "type": "string" }
                },
                "required": ["id", "text", "mode"]
              }
            },
            "stop_triggers": { "type": "array", "items": { "type": "string" } }
          },
          "required": ["timebox_minutes", "do_steps", "check_steps", "stop_triggers"]
        }
      },
      "required": ["task_id", "goal", "acceptance_criteria", "work_plan"]
    }
  },
  "required": ["status", "summary", "progress", "plan_output"]
}